<% if !current_user %>
  <div class="container">
    <h1>Welcome to my ToDo app !</h1>
    <div class="d-flex justify-content-around align-items-center">
      <%= link_to "Log in", new_session_path, class: 'btn btn-primary' %>
      <%= link_to "Register", register_path, class: 'btn btn-primary' %>
    </div>
  </div>
<% else %>
  <h1>TODO APP</h1>

  <p id="session-info"><em>You are currently signed in as <%= current_user.email %></em></p>

  <div id="my-tasks" data-controller="update-todo" class="container">
    <%= render 'todos/tasks', user: current_user %>
  </div>

  <div id="new-task" class="container">
    <%= render 'todos/new_task', todo: @todo %>
  </div>

<% end %>