<% if !current_user %>
  <%= link_to "Log in", new_session_path %>
  <%= link_to "Register", register_path %>
<% else %>
  <p>You are currently signed in as <%= current_user.email %></p>

  <h2>Here are your tasks:</h2>

  <div id="my-tasks" data-controller="update-todo">
    <%= render 'todos/tasks', user: current_user %>
  </div>

  <h2>Create a new task</h2>

  <%= simple_form_for @todo, remote: true do |f| %>
    <%= f.input :title,
                autofocus: true,
                required: true %>

    <%= f.input :description %>

    <%= f.input :due_date %>

    <%= f.submit "Create" %>
  <% end %>

<% end %>